{
  "name": "pushify",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@pushify/web",
    "build:api": "turbo build --filter=@pushify/api",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@pushify/web",
    "dev:api": "turbo dev --filter=@pushify/api",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo start",
    "start:web": "turbo start --filter=@pushify/web",
    "start:api": "turbo start --filter=@pushify/api"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.7.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
